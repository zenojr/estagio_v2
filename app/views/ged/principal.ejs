<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, inictial-scale=1, user-scalable=yes">
    <title>Moustache GED</title>
    <link rel="stylesheet" href="/stylesheets/principal.css">

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    
</head>
<body>

<main class="principal">
<!-- The drawer is always open in large screens. The header is always shown,even in small screens. -->
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
  <header class="mdl-layout__header">
    <div class="mdl-layout__header-row">
      <div class="mdl-layout-spacer"></div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable mdl-textfield--floating-label mdl-textfield--align-right">
        <label class="mdl-button mdl-js-button mdl-button--icon"
               for="fixed-header-drawer-exp">
          <i class="material-icons">search</i>
        </label>
        <div class="mdl-textfield__expandable-holder">
          <input class="mdl-textfield__input" type="text" name="sample" id="fixed-header-drawer-exp">
        </div>
      </div>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span>
      <div class="container_logo_principal">
        <img class="logo_sistema" src="/images/ged.png" alt="">
      </div>
    </span>
    <span class="mdl-layout-title">Moustache GED</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="">Contabilidade</a>
      <a class="mdl-navigation__link" href="">RH</a>
      <a class="mdl-navigation__link" href="">Compras</a>
      <a class="mdl-navigation__link" href="">TI</a>
    </nav>
  </div>

  <main class="mdl-layout__content">
    <div class="page-content"> 
        <!-- Colored FAB button with ripple -->
    <button id="show-dialog"  class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored botao_incluir">
        <i class="material-icons">add</i>
    </button>
    </div>
  </main>
  
    
      
  <dialog id='modal' class="mdl-dialog">
    <h4 class="mdl-dialog__title">Cadastro de arquivos</h4>
    <div class="mdl-dialog__content">
        <!-- Textfield with Floating Label -->

            <form>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="sample3">
            <label class="mdl-textfield__label" for="sample3">Título</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="text" id="sample3">
            <label class="mdl-textfield__label" for="sample3">Autor</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input list="diretorio" name="diretorio">
            <datalist id="diretorio">
                <option value="Contabilidade">
                <option value="RH">
                <option value="Compras">
                <option value="TI">
            </datalist>
              
            </div>
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="sample3">
            <label class="mdl-textfield__label" for="sample3">Palavras chave</label>
            </div>
            <!-- Floating Multiline Textfield -->
            <div class="mdl-textfield mdl-js-textfield">
            <textarea class="mdl-textfield__input" type="text" rows= "3" id="sample5" ></textarea>
            <label class="mdl-textfield__label" for="sample5">Descrição</label>
            </div>
            <div class="mdl-textfield mdl-js-textfield">
            <input type="file" id="Anexar arquivo" name="Anexar">
            </div>

          <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
          <thead>
            <tr>
              <th class="mdl-data-table__cell--non-numeric">Grupo</th>
              <th>Leitura</th>
              <th>Modificação</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="mdl-data-table__cell--non-numeric">Contabilidade</td>
              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-2">
  <input type="checkbox" id="checkbox-2" class="mdl-checkbox__input">
              </label>
              </td>  

              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-3">
  <input type="checkbox" id="checkbox-3" class="mdl-checkbox__input">
              </label>
              </td>
            </tr>
            <tr>
              <td class="mdl-data-table__cell--non-numeric">RH</td>
              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-4">
  <input type="checkbox" id="checkbox-4" class="mdl-checkbox__input">
              </label>
              </td>  

              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-3">
  <input type="checkbox" id="checkbox-3" class="mdl-checkbox__input">
              </label>
              </td>
            </tr>
            <tr>
              <td class="mdl-data-table__cell--non-numeric">Compras</td>
              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-4">
  <input type="checkbox" id="checkbox-4" class="mdl-checkbox__input">
              </label>
              </td>  

              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-3">
  <input type="checkbox" id="checkbox-3" class="mdl-checkbox__input">
              </label>
              </td>
            </tr>
            <tr>
              <td class="mdl-data-table__cell--non-numeric">TI</td>
              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-4">
  <input type="checkbox" id="checkbox-4" class="mdl-checkbox__input">
              </label>
              </td>  

              <td>
                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-3">
  <input type="checkbox" id="checkbox-3" class="mdl-checkbox__input">
              </label>
              </td>
            </tr>
          </tbody>
        </table>


        </form>

    </div>
    <div class="mdl-dialog__actions">
      <button type="button" class="mdl-button">Salvar </button>
      <button type="button" class="mdl-button close">Calcelar</button>

  </dialog>
  

  <script>
    var dialog = document.querySelector('dialog');
    var showDialogButton = document.querySelector('#show-dialog');
    if (! dialog.showModal) {
      dialogPolyfill.registerDialog(dialog);
    }
    showDialogButton.addEventListener('click', function() {
      dialog.showModal();
    });
    dialog.querySelector('.close').addEventListener('click', function() {
      dialog.close();
    });
  </script>


</div>

</main>

</body>
</html>